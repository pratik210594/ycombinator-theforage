.Card {
  background-color: lightgrey;
  font-size: 12px;
  padding: 20px;
  margin-bottom: 10px;
}

.Card-grey {
  background-color: rgba(167, 158, 158, 0.671);
  color: black;
  cursor: move;
  cursor: grab;
  cursor: -moz-grab;
  cursor: -webkit-grab;
  cursor: grabbing;
  cursor: -moz-grabbing;
  cursor: -webkit-grabbing;
}

.Card-grey:hover{
  animation-duration: 0.5s;
  animation-iteration-count: infinite;
  opacity: 0.8;
  background-color: rgb(0,0,0,0.1);
   transition: opacity 0.4s ease-in-out;
}

.Card-blue {
  background-color: skyblue;
  color: white;
}

.Card-green {
  background-color: rgb(150, 190, 150);
  color: white;
}

.Card-title {
  font-weight: bold;
}
